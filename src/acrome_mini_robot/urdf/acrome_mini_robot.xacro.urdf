<?xml version="1.0" ?>
<robot name="acrome_mini_robot">

  <!-- Ana robot gövdesi -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file:///home/halit/acrome_ws/src/acrome_mini_robot/meshes/base_link.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 -1.5708"/>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 -1.5708"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <inertia ixx="0.2083" ixy="0.0" ixz="0.0" iyy="0.2083" iyz="0.0" izz="0.3125"/>
    </inertial>
  </link>

  <!-- caster wheel -->
  <link name="wheel_1">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 1.5708 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025" length="0.025"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="0.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Tekerlek 2 (Sol arka - 120 derece) -->
  <link name="wheel_2">
    <visual>
      <geometry>
        <mesh filename="file:///home/halit/acrome_ws/src/acrome_mini_robot/meshes/left_wheel.stl" scale="0.7 0.7 0.7"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0032" ixy="0.0" ixz="0.0" iyy="0.0032" iyz="0.0" izz="0.0032"/>
    </inertial>
  </link>

  <!-- Tekerlek 3 (Sağ arka - 240 derece) -->
  <link name="wheel_3">
    <visual>
      <geometry>
        <mesh filename="file:///home/halit/acrome_ws/src/acrome_mini_robot/meshes/right_wheel.stl" scale="0.7 0.7 0.7"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0032" ixy="0.0" ixz="0.0" iyy="0.0032" iyz="0.0" izz="0.0032"/>
    </inertial>
  </link>

  <!-- Tekerlek joint'leri -->
  <joint name="base_to_wheel_1" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_1"/>
    <origin xyz="0.07 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <joint name="base_to_wheel_2" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_2"/>
    <origin xyz="0 0.125 0.035" rpy="0 0 -1.5708"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <joint name="base_to_wheel_3" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_3"/>
    <origin xyz="0 -0.125 0.035" rpy="0 0 -1.5708"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>


  <!-- ROS2 Control -->
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    
    <joint name="base_to_wheel_1">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <joint name="base_to_wheel_2">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <joint name="base_to_wheel_3">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <!-- Gazebo pluginleri -->
  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find acrome_mini_robot)/config/acrome_controller.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- Gazebo specific ayarları -->
  <gazebo reference="base_link">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="wheel_1">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="wheel_2">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="wheel_3">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Black</material>
  </gazebo>

</robot>