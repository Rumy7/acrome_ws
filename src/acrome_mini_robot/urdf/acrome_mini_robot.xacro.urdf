<?xml version="1.0" ?>
<robot name="acrome_mini_robot">
  <link name="world"/>
  
  <!-- Ana robot gövdesi -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.25" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.3"/>
    </inertial>
  </link>

  <!-- Tekerlek 1 (Ön tekerlek - 0 derece) -->
  <link name="wheel_1">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Tekerlek 2 (Sol arka - 120 derece) -->
  <link name="wheel_2">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Tekerlek 3 (Sağ arka - 240 derece) -->
  <link name="wheel_3">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- World'e sabit bağlantı -->
  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.08"/>
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <!-- Tekerlek joint'leri - Cart-pole'daki slider_to_cart gibi kontrol edilebilir -->
  <joint name="base_to_wheel_1" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="wheel_1"/>
    <dynamics damping="0.2" friction="0.2"/>
  </joint>

  <joint name="base_to_wheel_2" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="-0.1 0.173 0" rpy="0 0 2.094"/>
    <parent link="base_link"/>
    <child link="wheel_2"/>
    <dynamics damping="0.2" friction="0.2"/>
  </joint>

  <joint name="base_to_wheel_3" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="-0.1 -0.173 0" rpy="0 0 -2.094"/>
    <parent link="base_link"/>
    <child link="wheel_3"/>
    <dynamics damping="0.2" friction="0.2"/>
  </joint>

  <!-- IMU sensörü - cart-pole'daki gibi -->
  <link name="imu">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="base_to_imu" type="fixed">
    <origin xyz="0.0 0.0 0.1"/>
    <parent link="base_link"/>
    <child link="imu"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Gazebo IMU sensörü konfigürasyonu -->
  <gazebo reference="imu">
    <sensor name="acrome_imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>50.0</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
    </sensor>
  </gazebo>

  <!-- ROS2 Control - Cart-pole sistemine uygun -->
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    
    <!-- Tekerlek 1 kontrol arayüzleri -->
    <joint name="base_to_wheel_1">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- Tekerlek 2 kontrol arayüzleri -->
    <joint name="base_to_wheel_2">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- Tekerlek 3 kontrol arayüzleri -->
    <joint name="base_to_wheel_3">
      <command_interface name="velocity">
        <param name="min">-10</param>
        <param name="max">10</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- IMU sensörü durum arayüzleri -->
    <sensor name="acrome_imu_sensor">
      <state_interface name="orientation.x"/>
      <state_interface name="orientation.y"/>
      <state_interface name="orientation.z"/>
      <state_interface name="orientation.w"/>
      <state_interface name="angular_velocity.x"/>
      <state_interface name="angular_velocity.y"/>
      <state_interface name="angular_velocity.z"/>
      <state_interface name="linear_acceleration.x"/>
      <state_interface name="linear_acceleration.y"/>
      <state_interface name="linear_acceleration.z"/>
    </sensor>
  </ros2_control>

  <!-- Gazebo görsel materyaller -->
  <gazebo reference="base_link">
    <visual>
      <material>
        <ambient>0.2 0.2 0.8 1</ambient>
        <diffuse>0.2 0.2 0.8 1</diffuse>
        <specular>0.2 0.2 0.8 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="wheel_1">
    <visual>
      <material>
        <ambient>0.1 0.1 0.1 1</ambient>
        <diffuse>0.1 0.1 0.1 1</diffuse>
        <specular>0.1 0.1 0.1 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="wheel_2">
    <visual>
      <material>
        <ambient>0.1 0.1 0.1 1</ambient>
        <diffuse>0.1 0.1 0.1 1</diffuse>
        <specular>0.1 0.1 0.1 1</specular>
      </material>
    </visual>
  </gazebo>

  <gazebo reference="wheel_3">
    <visual>
      <material>
        <ambient>0.1 0.1 0.1 1</ambient>
        <diffuse>0.1 0.1 0.1 1</diffuse>
        <specular>0.1 0.1 0.1 1</specular>
      </material>
    </visual>
  </gazebo>

  <!-- Gazebo pluginleri -->
  <gazebo>
    <!-- ROS2 Control plugin -->
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find acrome_mini_robot)/config/acrome_controller.yaml</parameters>
    </plugin>
    
    <!-- IMU plugin -->
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu">
    </plugin>
  </gazebo>
</robot>